# Environment
ENV=development

# Application
APP_NAME=hr-policy-advisor
APP_VERSION=0.1.0
DEBUG=true

# API Server
HOST=0.0.0.0
PORT=8000

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# Redis
REDIS_URL=redis://localhost:6379/0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hr_policy

# HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token

# HITL Settings
HITL_DEFAULT_TIMEOUT_HOURS=72
HITL_CRITICAL_TIMEOUT_HOURS=48

# Agent Settings
AGENT_HEARTBEAT_INTERVAL_SECONDS=30
AGENT_MAX_RETRY_COUNT=3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
